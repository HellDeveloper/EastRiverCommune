@model EastRiverCommune.Entities.OrderList
@{
	this.Layout = "~/Views/Shared/_Layout.cshtml";
	this.ViewData["Title"] = "购物单";
	this.ViewData["GoBack"] = this.Url.Content("~/Commodity/Store");
}

@section Styles
{
	<link type="text/css" rel="stylesheet" href="~/Styles/mobiscroll.css" />
	<link type="text/css" rel="stylesheet" href="~/Styles/jquery-SelectNumber.css" />
	<link type="text/css" href="~/Styles/jquery-tiptool.css" rel="stylesheet" />
	<link type="text/css" rel="stylesheet" href="~/Styles/Commodity-ShoppingList.css" />
}

@section Scripts
{
	<script type="text/javascript" src="~/Scripts/mobiscroll.js"></script>
	<script type="text/javascript" src="~/Scripts/mobiscroll-datetime.js"></script>
	<script type="text/javascript" src="~/Scripts/jquery-SelectNumber.js"></script>
	<script type="text/javascript" src="~/Scripts/jquery-tiptool.js"></script>
	<script type="text/javascript" src="~/Scripts/jquery.validate.js"></script>
	<script type="text/javascript" src="~/Scripts/Commodity-ShoppingList.js"></script>
}

<table id="order-item">
	<thead>
		<tr>
			<th>名称</th>
			<th>数量</th>
			<th>总价</th>
			<th>操作</th>
		</tr>
		<tr>
			<td colspan="4">
				<span class="vertical-center">
					<span></span>
				</span>
			</td>
		</tr>
	</thead>
	<tbody></tbody>
</table>

<form id="order-list" method="post">
	<div>
		<label for="DeliveryDate" class="vertical-justify">
			<span>提</span>
			<span>货</span>
			<span>日</span>
			<span>期</span>
		</label>
		<span>：</span>
		<input type="text" placeholder="请输入提货日期" @this.Html.InputAttributesFor(m => m.DeliveryDate, Core.ToDate) />
	</div>
	<div>
		<label for="DeliveryManner" class="vertical-justify">
			<span>提</span>
			<span>货</span>
			<span>方</span>
			<span>式</span>
		</label>
		<span>：</span>
		<select id="DeliveryManner" name="DeliveryManner">
			@*<option value="到店自提">到店自提</option>
			<option value="快递送货">快递送货</option>*@
			@this.Html.SelectOptionsFor(m => m.DeliveryManner, EastRiverCommune.Entities.Data.DeliveryManners)
		</select>

	</div>
	<div>
		<label for="Man" class="vertical-justify">
			<span>联</span>
			<span>系</span>
			<span>人</span>
		</label>
		<span>：</span>
		<input type="text" placeholder="请输入联系人" @this.Html.InputAttributesFor(m => m.Man) />
	</div>
	<div>
		<label for="Phone" class="vertical-justify">
			<span>电</span>
			<span>话</span>
		</label>
		<span>：</span>
		<input type="tel" phone="true" placeholder="请输入联系人电话号码" @this.Html.InputAttributesFor(m => m.Phone) />
	</div>
	<div style="display: none;">
		<label for="Address" class="vertical-justify">
			<span>收</span>
			<span>货</span>
			<span>地</span>
			<span>址</span>
		</label>
		<span>：</span>
		<textarea id="Address" name="Address" placeholder="请输入收货地址" data-msg-required="收货地址必填">@this.Model.Address</textarea>
	</div>
	<div>
		<label for="Remark" class="vertical-justify">
			<span>备</span>
			<span>注</span>
		</label>
		<span>：</span>
		<textarea id="Remark" name="Remark" placeholder="备注信息">@this.Model.Remark</textarea>
	</div>
</form>